
---
import "@fontsource-variable/plus-jakarta-sans";
import { ViewTransitions } from "astro:transitions";
import FullLogo from "../components/FullLogo.astro";

export interface Props {
  title: string;
  description: string;
  mainContainerClass?: string;
  social?: {
    title: string;
    type: string;
    url: string;
  };
}

const { title, description, social } = Astro.props;
---

<html lang="en" class="[color-scheme:dark]">
  <head>
    <meta charset="utf-8" />
    <link
      rel="icon"
      type="image/png"
      href="/pcoi94.png"
      transition:persist
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="sitemap" href="/sitemap-index.xml" />

    {
      social && (
        <>
          <meta property="og:title" content={social.title} />
          <meta property="og:site_name" content="pcoiscript" />
          <meta property="og:description" content={description} />
          <meta property="og:type" content={social.type} />
          <meta property="og:url" content={social.url} />
          <meta name="twitter:title" content={social.title} />
          <meta name="twitter:description" content={description} />
          <meta name="twitter:card" content="summary_large_image" />
        </>
      )
    }

    <style is:global>
      html {
        scroll-behavior: smooth;
      }
    </style>

    <ViewTransitions />
  </head>
  <body class="bg-black text-white">
    <slot />
  </body>
</html>
