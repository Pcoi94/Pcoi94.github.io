---
interface Props {
  value: string;
  id: string;
}

const { value, id } = Astro.props;
---

<input type="number" value={value} id={id} />

<style>
  input {
    background-color: #fff;
    font-size: 18px;
    font-weight: bold;
    color: #333;
    height: 55px;
    width: 475px;
    padding: 0 16px;
    margin: 0 5px;
    transition:
      outline-color 0.2s,
      outline-width 0.2s; /* Ensure smooth transition for outline */
    border-radius: 4px;

    border: 1px solid #fff;
    outline: 2px solid transparent;

    animation: none;
  }

  input:focus {
    outline: 3px solid #189ad3;
    outline-offset: 0;
  }
</style>
