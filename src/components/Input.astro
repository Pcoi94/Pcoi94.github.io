---
interface Props {
  value: string;
  id: string;
}

const { value, id } = Astro.props;
---

<input type="number" value={value} id={id} class="responsive-input" />

<style>
  .responsive-input {
    background-color: #fff;

    height: 55px;
    font-size: 18px;

    font-weight: bold;
    color: #333;

    width: 100%;


    padding: 0 16px;
    transition: outline-color 0.2s, outline-width 0.2s;
    border-radius: 8px;
    border: 1px solid #fff;
    outline: 2px solid transparent;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
  }

  .responsive-input:focus {
    outline: 3px solid #189ad3;
    outline-offset: 0;
  }

  @media screen and (max-width: 600px) {
    .responsive-input {
      width: 100%;
      max-width: 100%;
    }
  }
</style>